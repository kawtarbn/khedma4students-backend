# PRODUCTION ENVIRONMENT CONFIGURATION
# Copy this to your .env file for production use

# APP CONFIGURATION
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com

# DATABASE CONFIGURATION
DB_CONNECTION=mysql
DB_HOST=your-production-db-host
DB_PORT=3306
DB_DATABASE=khedma4students_prod
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password

# FRONTEND URL (IMPORTANT!)
FRONTEND_URL=https://your-domain.com

# EMAIL CONFIGURATION (OPTION 1: Gmail)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-character-app-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="your-email@gmail.com"
MAIL_FROM_NAME="Khedma4Students"

# EMAIL CONFIGURATION (OPTION 2: SendGrid - Recommended)
# MAIL_MAILER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key
# MAIL_FROM_ADDRESS="noreply@your-domain.com"
# MAIL_FROM_NAME="Khedma4Students"

# EMAIL CONFIGURATION (OPTION 3: Mailgun)
# MAIL_MAILER=mailgun
# MAIL_MAILGUN_DOMAIN=your-domain.com
# MAIL_MAILGUN_SECRET=your-mailgun-key
# MAIL_FROM_ADDRESS="noreply@your-domain.com"
# MAIL_FROM_NAME="Khedma4Students"

# SECURITY
APP_KEY=your-32-character-app-key
BCRYPT_ROUNDS=12

# CACHE
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis

# SESSION
SESSION_DRIVER=database
SESSION_LIFETIME=120

# LOGGING
LOG_CHANNEL=stack
LOG_LEVEL=error
